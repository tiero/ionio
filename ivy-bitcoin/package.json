{
  "name": "ionio-bitcoin",
  "description": "Compiler library for Ionio smart contract language.",
  "version": "0.0.34",
  "homepage": "https://www.github.com/ionio-lang/ionio",
  "license": "MIT",
  "main": "lib/index.js",
  "dependencies": {
    "bcoin": "github:tiero/bcoin",
    "bcrypto": "~3.1.11",
    "level-js": "^2.2.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^2.2.48",
    "@types/node": "^7.0.70",
    "chai": "^4.1.2",
    "mocha": "^6.1.4",
    "pegjs": "^0.10.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "npm run compile-tsc && npm run compile-pegjs",
    "clean": "rm -rf lib",
    "compile-pegjs": "pegjs -o lib/parser.js src/parser.pegjs",
    "compile-tsc": "tsc",
    "test": "mocha src/test/*.ts --require ./node_modules/ts-node/register",
    "test:experimental": "mocha src/test/experiment.ts --require ./node_modules/ts-node/register"
  },
  "types": "./lib/index.d.ts"
